CREATE TABLE POST(
	POST_ID NUMBER(10) 
		CONSTRAINT PK_POST_ID PRIMARY KEY
		CONSTRAINT CK_PRIMARY_KEY CHECK(POST_ID < 2147483648)
		DEFAULT (POST_CNT.NEXTVAL),
	CONTENT VARCHAR2(240
		CONSTRAINT NN_CONTENT NOTNULL,
	REPLY_TO NUMBER(10)
		CONSTRAINT NN_REPLY_TO NOTNULL
		CONSTRAINT RF_REPLY_TO REFERENCES (POST_ID)
		CONSTRAINT CK_REPLY_TO CHECK(REPLY_TO < 2147483648)
		DEFAULT ('UN_KNOWN'),
	POST_TIME TIMESTAMP
		CONSTRAINT NN_POST_TIME NOTNULL
		DEFAULT (SYSTIMESTAMP);
	
)